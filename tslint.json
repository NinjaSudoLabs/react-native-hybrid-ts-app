{
  "rules": {
    "array-type": false,
    "arrow-parens": true,
    "arrow-return-shorthand": false,
    "ban-types": {
      "options": [
        ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
        [
          "Function",
          "Avoid using the `Function` type. Prefer a specific function type, like `() => void`."
        ],
        ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
        ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
        ["String", "Avoid using the `String` type. Did you mean `string`?"],
        ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
      ]
    },
    "binary-expression-operand-order": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "curly": true,
    "deprecation": true,
    "interface-name": [true, "always-prefix"],
    "interface-over-type-literal": false,
    "match-default-export-name": false,
    "no-angle-bracket-type-assertion": true,
    "no-boolean-literal-compare": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [true, "log", "warn"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-for-in-array": true,
    "no-eval": true,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-misused-new": true,
    "no-object-literal-type-assertion": false,
    "no-return-await": true,
    "no-namespace": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-throw": true,
    "no-unbound-method": false, // at least until supported by vscode plugin
    "no-unnecessary-class": true,
    "no-unsafe-any": false,
    "no-unsafe-finally": true,
    "no-unused-expression": false,
    // "no-unused-variable": true, // see vscode tslint plugin page for info on why this doesn't currently work
    "no-var-keyword": true,
    "no-void-expression": false,
    "object-literal-key-quotes": false,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-const": true,
    "radix": true,
    "restrict-plus-operands": false, // at least until supported by vscode plugin
    "return-undefined": false,
    "strict-boolean-expressions": false,
    "strict-type-predicates": false, // at least until supported by vscode plugin
    "switch-default": false,
    "triple-equals": true,
    "use-default-type-parameter": true,
    "use-isnan": true,
    "variable-name": [true, "ban-keywords"],
    "object-literal-sort-keys": false,
    "ordered-imports": false
  }
}
